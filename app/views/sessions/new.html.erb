<h1>ログインページ</h1>
<div class="container">
    <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
        <%= f.label t('activerecord.attributes.user.email'), class:"control-label" %>
        <div>
            <%= f.text_field :email, class:'form-control'%>
        </div>
    </div
    <div class="form-group">
        <%= f.label t('activerecord.attributes.user.password'), class:"control-label" %>
        <div>
            <%= f.password_field :password, class:'form-control'%>
        </div>
    </div>
    <div class="form-group">
        <%= f.submit "ログイン", class: "btn btn‐primary" %>
    </div>
    <% end %>
    <p>未登録の方は<%= link_to "ユーザー登録ページへ", signup_path %></p>
</div>